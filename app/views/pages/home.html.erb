<div class="jumbotron">
  <%= image_tag 'hero2.jpg', width: "100%"%>
  <div class="title">
    <h1>Kriti and Arjun</h1>
    <div class="home-date">June 11th <span class="bar"></span> Chicago</div>
  </div>
</div>
<div class="container">
  <div class="row" id="rsvp">
    <div class="col-md-12">
      <div class="choose-household-form">
        <h2>Access event info and submit your RSVP with the form below</h2>
        <h3>Search using your name or the name of someone in your household</h3>
        <%= form_tag(rsvp_form_households_path, method: :get) do %>
          <%= select_tag :guest_id, options_from_collection_for_select(Guest.has_full_name, :id, :full_name), include_blank: true %>
          <%= submit_tag "Search for household", class: 'btn btn-primary' %>
        <% end -%>
      </div>
    </div>
  </div>
</div>
<div class="image-heading" id="accomodations">
  <div class="screen">
    <div class="container">
      <h2>Accomodations</h2>
      <%= render 'address', event: Event.find_by_name("Wedding Ceremony") %>
      <p>The ceremony and reception will take place here. We have reserved a block of rooms under the name "Goel Wedding"</p>
    </div>
  </div>
</div>


<script>
  $(function(){
    $( "#guest_household_id" ).select2({
        placeholder: "The Goels",
        theme: "bootstrap"
    });

    $( "#guest_id" ).select2({
        placeholder: "Select any member of your household",
        theme: "bootstrap"
    });
  });
</script>
