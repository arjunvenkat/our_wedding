<div class="rsvp-status">
  <div class="rsvp-form">
    <div class="image-heading">
      <div class="screen">
        <div class="container">
          <h1>Event RSVPs for the <%= @household.name %> household <small><%= link_to "edit", rsvp_form_households_path(guest_id: @household.guests.first.id)  %></small></h1>
          <p>You have a week to make changes once you've submitted your RSVP. If you still need to make changes afterwards, please email Arjun at <a href="mailto:avenkat2@gmail.com">avenkat2@gmail.com</a></p>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <% Event.all.each do |event| %>
            <% if  event.rsvps_for_household(@household).present? %>
              <div class="event <%= event.name.downcase.gsub(" ", "-") %>">
                <h2 class="event-title">
                  <div class="screen">
                    <%= event.name %>
                  </div>
                </h2>
                <h5 class="rsvp-date-time"><%= event.datetime.strftime("%A, %B #{event.datetime.day.ordinalize}") %> <small>at</small> <%= event.datetime.strftime("%l:%M %p") %></h5>
                <%= render 'pages/address', event: event %>
                <p><%= event.description %></p>
                <h6>Attendees:</h6>
                <ul>
                  <% event.rsvps_for_household(@household).each do |rsvp| %>
                    <% if rsvp.status == 'yes'  %>
                      <%= rsvp.guest.full_name %>
                    <% end %>
                  <% end %>
                </ul>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

