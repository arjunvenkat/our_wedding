.rsvp-title {
  margin-bottom: 2em;
}

.rsvp-form, .rsvp-status, .check-names {
  h1 {
    font-size: 42px;
  }
  h2 {
    font-size: 2.4em;
  }
}

.image-heading {
    background-size: cover;
    background-position: 0% 40%;
}

.rsvp-form {
  .image-heading {
    background-image: url("<%= asset_path('kritiarjun3.jpg') %>");
    background-position: 0% 50%;
  }
  .guest-name {
    line-height: 1.5;
    font-size: 16px;
  }
}

.rsvp-status {
  .image-heading {
     background-image: url("<%= asset_path('kritiarjun2.jpg') %>");
  }
  h1 {
    margin-bottom: 0.3em;
  }
  p {
    font-size: 1.2em;
  }
}

.check-names{
  .image-heading {
     background-image: url("<%= asset_path('kritiarjun2.jpg') %>");
     background-size: cover;
     background-position: 0% 40%;
  }
}



.form-event-name h4 {
  line-height: 56px;
  margin: 0;
  font-weight: bold;
}

.form-rsvp-status select, select.guest-status {
  font-size: 24px;
  line-height: 37px;
  height: 56px;
}

.guest-name input.form-control {
  font-size: 32px;
  height: 2em;
}

.rsvp-date-time {
  margin-bottom: 0;
}
.rsvp-address {
  margin-top: 0;
}

.rsvp-date-time, .rsvp-address {
  line-height: 1.4;
  small {
    color: gray;
  }
}

.rsvp-event-desc {
  font-size: 1.4em;
  margin-top: 0.4em;
  line-height: 1.1em;
}



.event {
  border-bottom: 1px solid lightgray;
  padding-bottom: 24px;
  margin-bottom: 24px;

  &:last-child {
    border: none;
  }

  h6 {
    margin-bottom: 0;
    font-weight: bold;
  }
  ul {
    padding-left: 0;
    li {
      list-style-type: none;
    }
  }
  .screen {
    background-color: rgba(0,0,0,0);
    color: black;
  }

}


.attending {
  color: green;
}

.not-attending {
  color: red;
}

@media (min-width: $screen-xs-min) {
  .event {
    border: none;
    .event-title {
      position: relative;
      background-image: url('<%= asset_path("fruits.jpg") %>');
      background-size: cover;
      background-position: 0% 25%;
    }
    .screen {
      padding: 24px;
      background-color: rgba(0,0,0,0.6);
      color: white;
    }
  }
}
